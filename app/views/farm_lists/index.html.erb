<h1>Farm Lists</h1>

<div class="container">
  <div class="">
    <%= form_for [@account, @farm_list]  do |f| %>
      <%= render "shared/error_messages", object: @farm_list %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control farm-list-input" %>
      <%= f.label :village %>
      <%= f.select :village_id, @villages.collect {|k| [k.name, k.id]}, class: "form-control" %>
      <%= f.submit "Create", class:"btn btn-success" %>
    <% end %>
  </div>

  <div class="farm-table2">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Village</th>
          <th>Number Oasis</th>
          <th>Active</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @farm_lists.each do |farm_list| %>
          <tr>
            <td><%= farm_list.name %></td>
            <td><%= farm_list.village_name%></td>
            <td><%= farm_list.farms.count %></td>
            <td><%= check_box_tag "status", farm_list.status, farm_list.status, disabled: true %></td>
            <td>
              <%= link_to edit_account_farm_list_path(@account, farm_list) do %>
                <span>
                  <i class="glyphicon glyphicon-pencil"></i>
                </span>
              <% end %>
            </td>
            <td class="buttom-delete">
              <%= link_to [@account, farm_list], method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
